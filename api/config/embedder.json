{
  "embedder": {
    "client_class": "OpenAIClient",
    "batch_size": 500,
    "initialize_kwargs": {
      "api_key": "${EMBEDDER_API_KEY}",
      "base_url": "${EMBEDDER_BASE_URL}"
    },
    "model_kwargs": {
      "model": "text-embedding-3-small",
      "dimensions": 256,
      "encoding_format": "float"
    }
  },
  "retriever": {
    "top_k": 20
  },
  "text_splitter": {
    "split_by": "word",
    "chunk_size": 350,
    "chunk_overlap": 100
  }
}
